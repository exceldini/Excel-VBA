Option Explicit

'https://github.com/exceldini/Excel-VBA/blob/master/Doc_Sheet%20Add

Private Sheet_Name As String
Private wb As Workbook

' ===================
Public Sub Doc_Sheet_InExSu()

    Sheet_MakeUp _
            Sheet_Add( _
            Sheet_Check(wb, _
            Variables_Declare))

End Sub

Public Function Variables_Declare(Optional ByVal msg As Variant) _
       As Variant

    Sheet_Name = "Doc_Sheet"

    Set wb = ActiveWorkbook

End Function

Public Function Sheet_Check(ByRef wb As Workbook, Optional ByVal msg As Variant) _
       As Worksheet

Dim ws As Worksheet

    For Each ws In wb.Worksheets

        If ws.Name = Sheet_Name Then

            Set Sheet_Check = ws

            Exit For

        End If
    Next
End Function

Public Function Sheet_Add(ByRef ws As Worksheet) _
       As Worksheet

    If ws Is Nothing Then

        With wb

            .Sheets.Add after:=.Sheets(.Sheets.Count)

        End With

        Set ws = ActiveSheet

        ws.Name = Sheet_Name
    
    End If

    Set Sheet_Add = ws
    
End Function

Public Function Sheet_MakeUp(ByRef ws As Worksheet) As Variant
    
    ActiveWindow.DisplayGridlines = False

    ws.Range("a1").Value = "This is a Documentation Sheet. Please note everything regarding this workbook here."

    With ws.Range("a1").Font
        
        .Bold = True
        .Size = 16
        .Underline = True
        .Italic = True

    End With
End Function
